# Copy this to .env.local and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/basestay"

# Base Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_BASE_RPC_URL="https://mainnet.base.org"
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your_walletconnect_project_id"

# Coinbase Developer Platform (Get from: https://portal.cdp.coinbase.com/projects/api-keys)
NEXT_PUBLIC_CDP_API_KEY="your_cdp_api_key"

# Application
NEXT_PUBLIC_APP_NAME="BaseStay"
NEXT_PUBLIC_APP_LOGO_URL="/logo.png"
NEXT_PUBLIC_APP_URL="https://basestay.app"

# Smart Contract Addresses (Fill after deployment)
NEXT_PUBLIC_PROPERTY_REGISTRY_ADDRESS=""
NEXT_PUBLIC_BOOKING_MANAGER_ADDRESS=""
NEXT_PUBLIC_REVIEW_SYSTEM_ADDRESS=""

# IPFS/Storage (Get from Pinata.cloud)
NEXT_PUBLIC_PINATA_API_KEY="your_pinata_api_key"
PINATA_SECRET_API_KEY="your_pinata_secret"

# For contract deployment (Admin only)
ADMIN_PRIVATE_KEY="your_private_key_for_deployment"
