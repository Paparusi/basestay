{
  "extends": "./tsconfig.json",
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts", 
    "**/*.spec.tsx",
    "ignition/**/*",
    "scripts/**/*",
    "test/**/*",
    "hardhat.config.ts",
    "src/app/api/properties/route.ts",
    "src/app/api/properties/search/route.ts",
    "src/app/api/seed/route.ts",
    "src/app/host/properties/new/page-old.tsx",
    "src/app/page-old.tsx",
    "src/app/host/properties/[id]/edit/page.tsx",
    "src/app/host/properties/[id]/page.tsx",
    "src/app/api/properties/[id]/route.ts"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "noEmit": true
  }
}
